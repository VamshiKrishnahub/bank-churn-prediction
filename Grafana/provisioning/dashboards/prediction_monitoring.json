          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 18
        },
        "type": "table",
        "title": "âš ï¸ Recent Prediction Errors",
        "description": "Monitor prediction pipeline failures. Shows file processing errors, API failures, and data issues.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT \n  TO_CHAR(timestamp, 'HH24:MI:SS') AS \"Time\",\n  file_name AS \"File\",\n  error_type AS \"Error Type\",\n  error_message AS \"Message\"\nFROM prediction_errors\nWHERE timestamp > NOW() - INTERVAL '30 minutes'\n  AND error_type != 'prediction_success'\nORDER BY timestamp DESC\nLIMIT 10",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {},
          "overrides": [
