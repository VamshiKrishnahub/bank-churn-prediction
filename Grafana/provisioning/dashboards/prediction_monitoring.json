        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "type": "stat",
        "title": "ðŸ”¢ Average Customer Age (Last 10 Min)",
        "description": "Monitor average age in serving data. Training baseline: ~45 years. Alert if drift >10 years.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT \n  ROUND(AVG(age), 1) AS value\nFROM predictions\nWHERE created_at > NOW() - INTERVAL '10 minutes'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "year",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 35
                },
                {
                  "color": "green",
                  "value": 40
                },
                {
                  "color": "green",
                  "value": 50
                },
                {
                  "color": "orange",
                  "value": 55
                },
                {
                  "color": "red",
                  "value": 60
                }
              ]
            },
            "mappings": []
          }
        },
        "options": {
