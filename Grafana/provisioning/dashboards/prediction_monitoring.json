    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "timeseries",
        "title": "ðŸ“Š Prediction Volume by Source (Last 1 Hour)",
        "description": "Monitor prediction activity from webapp vs scheduled pipeline. Detect if pipeline stops or webapp usage drops.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT \n  DATE_TRUNC('minute', created_at) AS time,\n  COUNT(*) FILTER (WHERE source = 'webapp') AS \"Webapp Predictions\",\n  COUNT(*) FILTER (WHERE source = 'scheduled') AS \"Scheduled Predictions\"\nFROM predictions\nWHERE created_at > NOW() - INTERVAL '1 hour'\nGROUP BY time\nORDER BY time ASC",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 20,
              "showPoints": "auto",
              "spanNulls": false
            },
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "green",
                  "value": 10
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Webapp Predictions"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "blue",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Scheduled Predictions"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "green",
                    "mode": "fixed"
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "alert": {
          "name": "No Predictions Alert",
          "message": "âš ï¸ No predictions in last 10 minutes - pipeline may be broken!",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "10m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "sum"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "noDataState": "alerting"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "bargauge",
        "title": "ðŸŽ¯ Churn Prediction Rate (Last 30 Min)",
        "description": "Model prediction distribution. ALERT if 100% churn or 0% churn (model stuck). Expected: 15-25% churn rate.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT \n  'Churn Rate' AS metric,\n  ROUND(\n    (COUNT(*) FILTER (WHERE prediction = 1)::DECIMAL / NULLIF(COUNT(*), 0)) * 100,\n    2\n  ) AS value\nFROM predictions\nWHERE created_at > NOW() - INTERVAL '30 minutes'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "orange",
                  "value": 5
                },
                {
                  "color": "green",
                  "value": 15
                },
                {
                  "color": "green",
                  "value": 25
                },
                {
                  "color": "orange",
                  "value": 40
                },
                {
                  "color": "red",
                  "value": 60
                }
              ]
            },
            "mappings": []
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "alert": {
          "name": "Model Stuck Alert",
          "message": "ðŸ”´ CRITICAL: Model predicting same class! Check model health immediately.",
          "conditions": [
            {
              "evaluator": {
                "params": [0, 1],
                "type": "within_range"
              },
              "operator": {
                "type": "or"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            },
            {
              "evaluator": {
                "params": [99, 100],
                "type": "within_range"
              },
              "operator": {
                "type": "or"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "noDataState": "alerting"
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 9
        },
        "type": "barchart",
        "title": "ðŸ“ˆ Age Distribution Drift (Training vs Serving)",
        "description": "Detect data drift: Compare training data (baseline, 7+ days ago) vs serving data (last 1 hour). Large differences indicate distribution shift.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "WITH training_data AS (\n  SELECT \n    'Training (Baseline)' AS dataset,\n    CASE \n      WHEN age < 25 THEN '18-24'\n      WHEN age < 35 THEN '25-34'\n      WHEN age < 45 THEN '35-44'\n      WHEN age < 55 THEN '45-54'\n      WHEN age < 65 THEN '55-64'\n      ELSE '65+'\n    END AS age_group,\n    COUNT(*) AS count\n  FROM predictions\n  WHERE created_at < NOW() - INTERVAL '7 days'\n  GROUP BY dataset, age_group\n),\nserving_data AS (\n  SELECT \n    'Serving (Current)' AS dataset,\n    CASE \n      WHEN age < 25 THEN '18-24'\n      WHEN age < 35 THEN '25-34'\n      WHEN age < 45 THEN '35-44'\n      WHEN age < 55 THEN '45-54'\n      WHEN age < 65 THEN '55-64'\n      ELSE '65+'\n    END AS age_group,\n    COUNT(*) AS count\n  FROM predictions\n  WHERE created_at > NOW() - INTERVAL '1 hour'\n  GROUP BY dataset, age_group\n)\nSELECT \n  age_group AS metric,\n  SUM(CASE WHEN dataset = 'Training (Baseline)' THEN count ELSE 0 END) AS \"Training\",\n  SUM(CASE WHEN dataset = 'Serving (Current)' THEN count ELSE 0 END) AS \"Serving\"\nFROM (\n  SELECT * FROM training_data\n  UNION ALL\n  SELECT * FROM serving_data\n) combined\nGROUP BY age_group\nORDER BY age_group",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Training"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "blue",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Serving"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "orange",
                    "mode": "fixed"
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "orientation": "auto",
          "xTickLabelRotation": 0,
          "stacking": "none",
          "showValue": "auto",
          "barWidth": 0.8,
          "groupWidth": 0.7,
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 9
        },
        "type": "piechart",
        "title": "ðŸŒ Geography Distribution (Current Serving Data)",
        "description": "Monitor feature drift in categorical variables. Check if geography distribution matches training expectations.",
        "datasource": {
          "type": "postgres",
          "uid": "defence_db"
        },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT \n  geography AS metric,\n  COUNT(*) AS value\nFROM predictions\nWHERE created_at > NOW() - INTERVAL '1 hour'\nGROUP BY geography\nORDER BY value DESC",
            "format": "table"
          }
